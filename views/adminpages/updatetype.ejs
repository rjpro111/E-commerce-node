<%-include('header')%>

<div class="col-xxl">
    <div class="card mb-4">
      <div class="card-header d-flex align-items-center justify-content-between">
        <h5 class="mb-0">Basic with Icons</h5> <small class="text-muted float-end">Merged input group</small>
      </div>
      <div class="card-body">
       <div class="col-xxl">
        <div class="form-group mb-3">
            <label for="product-category">Category<span class="text-danger">*</span></label>
            <select class="form-select" name="category" id="product-category" style="width: 100%;">
                <option><%=tdata.catogry.category%></option>
                
            </select>
        </div>

        <div class="form-group mb-3">
            <label for="product-category">Sub Category<span class="text-danger">*</span></label>
            <select class="form-select" name="subcategory" id="product-subcategory" style="width: 100%;">
                <option><%=tdata.subcategory.subcategory%></option>
                
            </select>
        </div>

        <div class="form-group mb-3">
            <label for="product-category">Extra Category<span class="text-danger">*</span></label>
            <select class="form-select" name="extracategory" id="product-ecategory" style="width: 100%;">
                <option><%=tdata.extracategory.extracategory%></option>
            </select>
        </div>

        <div class="form-group mb-3">
            <label for="product-category">Brand<span class="text-danger">*</span></label>
            <select class="form-select" name="extracategory" id="product-ecategory" style="width: 100%;">
                <option><%=tdata.brand.brand%></option>
            </select>
        </div>
        <form action="/admin/type/edittypedata" method="post">
            <input type="hidden" name="EditId" value="<%=tdata.id%>">
            <div class="card-box">
                <div class="form-group mb-3">
                    <label for="product-name">Type <span class="text-danger">*</span></label>
                    <input type="text" id="product-type" value="<%=tdata.type%>" name="type" class="form-control" placeholder="e.g : Mobile">
                </div>
            </div>
            <div class="text-center mb-3" style="transform: translateX(260px);">
                <button type="reset" class="btn w-sm btn-danger waves-effect">Reset</button>
                <button type="submit" class="btn btn-primary">Send</button>
            </div>
        </form>
  </div>
      </div>
    </div>
  </div>

<%-include('footer')%>